<idea-plugin>
    <id>org.example.Codistic</id>
    <name>Codistic</name>
    <vendor email="support@codistic.com" url="http://www.codistic.com">Codistic</vendor>

    <description>Created by codistic</description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="MyPlugin.SampleMenu" text="Codistic">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="1" class="SelectMethodAction" text="Functions"/>
            <action id="2" class="RowdataAction" text="CodeLine"/>
            <action id="3" class="UpdateTimeAction" text="History"/>
        </group>
    </actions>
</idea-plugin>